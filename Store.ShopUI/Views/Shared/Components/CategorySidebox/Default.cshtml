@model List<string>
<a class="btn @(string.IsNullOrWhiteSpace(ViewBag.Category)?"btn-success":"btn-dark")" asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNumber="1">Home</a>
@foreach (var category in Model)
{
    <a class="btn @(category == ViewBag.Category ? "btn-success": "btn-dark")" asp-controller="Home" asp-action="Index" asp-route-category="@category" asp-route-pageNumber="1">
        @category
    </a>
}